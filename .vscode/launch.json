{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Отладка gui",
            "type": "cppdbg",
            "request": "launch",

            /* Путь к скомпилированной программе */
            "program": "${workspaceFolder}/gui.exe",
            
            /* параметры программы */
            /* сервер, порт, ник, канал */
            "args": [
                "irc.quakenet.org",
                "6667",
                "JemmaSimmons",
                "#chlor"
                
                // "irc.libera.chat",
                // "6667",
                // "JemmaSimmons",
                // "#chlor"
                
                // "irc.pouque.net",
                // "6667",
                // "JemmaSimmons",
                // "#chlor"
            ],

            "stopAtEntry": false,

            /* текущий каталог */
            "cwd": "${fileDirname}",

            "externalConsole": false,
            "MIMode": "gdb",

            /* путь к отладчику GDB, указываем свой */
            "miDebuggerPath": "C:\\Program Files\\mingw64\\bin\\gdb.exe",

            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}
